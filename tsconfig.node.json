{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true // Ensure this is included for project references
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
